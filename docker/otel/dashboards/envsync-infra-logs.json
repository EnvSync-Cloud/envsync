{
  "uid": "envsync-infra-logs",
  "title": "EnvSync Infrastructure Logs",
  "description": "Container logs from all EnvSync Docker services via Promtail",
  "tags": ["envsync", "infrastructure", "logs"],
  "timezone": "browser",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "refresh": "10s",
  "schemaVersion": 39,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "templating": {
    "list": [
      {
        "name": "service_category",
        "type": "query",
        "label": "Category",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": { "label": "service_category", "stream": "{compose_project=~\".+\"}", "type": 1 },
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "allValue": ".+",
        "sort": 1,
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] }
      },
      {
        "name": "compose_service",
        "type": "query",
        "label": "Service",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": { "label": "compose_service", "stream": "{service_category=~\"$service_category\"}", "type": 1 },
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "allValue": ".+",
        "sort": 1,
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] }
      },
      {
        "name": "detected_level",
        "type": "custom",
        "label": "Level",
        "query": "debug,info,warn,error,fatal",
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] }
      },
      {
        "name": "search",
        "type": "textbox",
        "label": "Search",
        "current": { "selected": false, "text": "", "value": "" }
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "Overview",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "panels": []
    },
    {
      "id": 1,
      "title": "Log Volume by Container",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 1 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki" },
          "editorMode": "code",
          "expr": "sum by (compose_service) (count_over_time({compose_service=~\"$compose_service\", service_category=~\"$service_category\"} | detected_level =~ \"$detected_level\" [$__auto]))",
          "legendFormat": "{{compose_service}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80,
            "stacking": { "mode": "normal", "group": "A" },
            "lineWidth": 0,
            "pointSize": 5,
            "showPoints": "never",
            "gradientMode": "scheme"
          },
          "color": { "mode": "palette-classic" },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["sum"] }
      }
    },
    {
      "id": 2,
      "title": "Log Volume by Category",
      "type": "piechart",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 9 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki" },
          "editorMode": "code",
          "expr": "sum by (service_category) (count_over_time({service_category=~\"$service_category\"} [$__auto]))",
          "legendFormat": "{{service_category}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "pieType": "donut",
        "reduceOptions": { "calcs": ["sum"], "fields": "", "values": false },
        "legend": { "displayMode": "table", "placement": "right", "values": ["percent", "value"] },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 3,
      "title": "Log Level Distribution",
      "type": "piechart",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 9 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki" },
          "editorMode": "code",
          "expr": "sum by (detected_level) (count_over_time({compose_service=~\"$compose_service\", service_category=~\"$service_category\"} | detected_level =~ \"$detected_level\" [$__auto]))",
          "legendFormat": "{{detected_level}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": [
          { "matcher": { "id": "byName", "options": "error" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "warn" }, "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "info" }, "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "debug" }, "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "fatal" }, "properties": [{ "id": "color", "value": { "fixedColor": "purple", "mode": "fixed" } }] }
        ]
      },
      "options": {
        "pieType": "donut",
        "reduceOptions": { "calcs": ["sum"], "fields": "", "values": false },
        "legend": { "displayMode": "table", "placement": "right", "values": ["percent", "value"] },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "row",
      "title": "All Logs",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 15 },
      "id": 101,
      "panels": []
    },
    {
      "id": 4,
      "title": "All Container Logs",
      "type": "logs",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 16 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki" },
          "editorMode": "code",
          "expr": "{compose_service=~\"$compose_service\", service_category=~\"$service_category\"} | detected_level =~ \"$detected_level\" |= \"$search\""
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      }
    },
    {
      "type": "row",
